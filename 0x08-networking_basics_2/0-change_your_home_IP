#!/usr/bin/env bash
# This script configures DNS resolution for localhost and facebook.com.

# Backup the original /etc/hosts file
sudo cp /etc/hosts /etc/hosts.bak

# Change localhost to 127.0.0.2
sudo sed -i 's/127.0.0.1/127.0.0.2/g' /etc/hosts

# Change facebook.com to 8.8.8.8
sudo sed -i 's/157.240.11.35/8.8.8.8/g' /etc/hosts

# Output success message
echo "DNS resolution configured successfully."

# Display the updated /etc/hosts file
cat /etc/hosts
